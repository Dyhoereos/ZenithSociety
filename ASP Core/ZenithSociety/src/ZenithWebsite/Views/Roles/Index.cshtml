
@{
    ViewData["Title"] = "Roles";
    var roleList = ViewData["RolesList"] as Dictionary<String,String>;
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in roleList)
        {
            <tr>
                <td>
                    @role.Key.ToString()
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Value.ToString()">Edit</a> |
                    <a asp-action="Details" asp-route-id="@role.Value.ToString()">Details</a> |
                    <a asp-action="Delete" asp-route-id="@role.Value.ToString()">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
